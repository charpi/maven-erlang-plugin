<lifecycles>
  <lifecycle>
    <id>targetSystem</id>
    <phases>
      <phase>
        <id>package</id>
        <configuration>
          <includeErts>true</includeErts>
        </configuration>
      </phase>
    </phases>
  </lifecycle>
  <lifecycle>
    <id>upload</id>
    <phases>
      <phase>
        <id>package</id>
        <configuration>
          <skipTests>true</skipTests>
          <skipDialyzer>true</skipDialyzer>
          <skipReleaseTest>true</skipReleaseTest>
        </configuration>
      </phase>
    </phases>
  </lifecycle>
  <lifecycle>
    <id>run</id>
    <phases>
      <phase>
        <id>package</id>
        <configuration>
          <skipTests>true</skipTests>
          <skipDialyzer>true</skipDialyzer>
          <skipReleaseTest>true</skipReleaseTest>
        </configuration>
      </phase>
    </phases>
  </lifecycle>
</lifecycles>